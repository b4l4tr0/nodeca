env:
  node:     true
  browser:  false

#globals:
  #t: false

  # browser only
  #N: false
  #window: false
  #$: false

rules:
  block-scoped-var:     2
  camelcase:            0
  consistent-this:      [ 2, self ]
  curly:                [ 2, all ]
  default-case:         2
  eqeqeq:               2
  guard-for-in:         2
  handle-callback-err:  2
  max-depth:            [ 1, 3 ]
  max-nested-callbacks: [ 1, 4 ]
  # string can exceed 80 chars, but should not overflow github website :)
  max-len:              [ 2, 120, 1000 ]
  no-bitwise:           2
  no-comma-dangle:      2
  no-console:           2
  no-div-regex:         2
  no-else-return:       2
  no-eq-null:           2
  no-floating-decimal:  2
  no-lonely-if:         2
  no-process-exit:      0
  no-underscore-dangle: 0
  quotes:               [ 2, single, avoid-escape ]
  radix:                2
  space-after-keywords: [ 2, always ] # Fixed in master


  # temporary
  no-alert:             0
  no-yoda:              0 # Fixed in master
  consistent-return:    0


  # postponed
  #
  #brace-style: [2, '1tbs']
  #space-in-brackets:    [ 2, never ]



  #
  # Our custom plugins
  #
  no-trailing-spaces:     2
  no-lodash-aliases:      2
  no-async-aliases:       2
  eol-last:               2
  indent:                 [2, spaces, 2]
